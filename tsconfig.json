{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["./constants/*"],
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@helpers/*": ["./helpers/*"],
      "@configs/*": ["./configs/*"]
    },
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./lib-types"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [".history", "./node_modules", "**/node_modules/*"]
}
