{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@interfaces/*": ["interfaces/*"],
      "@helpers/*": ["helpers/*"],
      "@configs/*": ["configs/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [".history", "./node_modules", "**/node_modules/*"]
}
